@page "{handler?}/{id?}"
@model BookLibrary.App.Pages.Loans.AddModel
@{
    ViewData["Title"] = "Add Book Loan";
}

<h2 class="text-center m-2">@ViewData["Title"]</h2>
<div class="text-center">
    <span class="text-danger">@ViewData["Message"]</span>
</div>

<form method="post">
    <div class="form-group row">
        <label asp-for="Loan.BorrowerId" class="col-sm-2 col-form-label text-md-right">Borrower</label>
        <div class="col-sm-10">
            <select class="form-control" name="BorrowerId">
                <option value="">-- select --</option>
                @{
                    foreach (var borrower in Model.Loan.Borrowers)
                    {
                        <option value="@borrower.Id">@borrower.Name</option>
                    }
                }
            </select>
            <span class="text-danger" asp-validation-for="Loan.BorrowerId"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Loan.ItemId" class="col-sm-2 col-form-label text-md-right">Book</label>
        <div class="col-sm-10">
            <select class="form-control" name="ItemId">
                <option value="">-- select --</option>
                @{
                    foreach (var movie in Model.Loan.Items)
                    {
                        <option value="@movie.Id">@movie.Name</option>
                    }
                }
            </select>
            <span class="text-danger" asp-validation-for="Loan.ItemId"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Loan.DateOfLoan" class="col-sm-2 col-form-label text-md-right">Date of Loan</label>
        <div class="col-sm-10">
            <input asp-for="Loan.DateOfLoan" type="date" class="form-control" min="2000-01-02">
            <span class="text-danger" asp-validation-for="Loan.DateOfLoan"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Loan.DueDate" class="col-sm-2 col-form-label text-md-right">Due Date</label>
        <div class="col-sm-10">
            <input asp-for="Loan.DueDate" type="date" class="form-control" min="2000-01-02">
            <span class="text-danger" asp-validation-for="Loan.DueDate"></span>
        </div>
    </div>
    <div class="form-group row offset-sm-2">
        <button type="submit" class="btn btn-success ml-2">Save</button>
        <a asp-page="/Index" class="btn btn-light ml-2">Cancel</a>
    </div>
</form>