@page
@model BookLibrary.App.Pages.Borrowers.AddModel
@{
    ViewData["Title"] = "Add Borrower";
}

<h2 class="text-center m-2">@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label text-md-right">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" type="text" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label text-md-right">Address</label>
        <div class="col-sm-10">
            <input asp-for="Address" type="text" class="form-control" placeholder="Address">
        </div>
    </div>
    <div class="form-group row offset-sm-2">
        <button type="submit" class="btn btn-success ml-2">Add borrower</button>
        <a asp-page="/Index" class="btn bg-secondary text-white ml-2">Cancel</a>
    </div>
</form>