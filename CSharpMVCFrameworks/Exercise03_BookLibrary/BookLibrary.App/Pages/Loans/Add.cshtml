@page "{handler?}/{id?}"
@model BookLibrary.App.Pages.Loans.AddModel
@{
    ViewData["Title"] = "Add Loan";
}

<h2 class="text-center m-2">@ViewData["Title"]</h2>
<div class="text-center">
    <span class="text-danger">@ViewData["Message"]</span>
</div>


<form method="post">
    <div class="form-group row">
        <label asp-for="BorrowerId" class="col-sm-2 col-form-label text-md-right">Borrower</label>
        <div class="col-sm-10">
            @Html.DropDownList("BorrowerId", Model.Borrowers, "-select borrower-", new { @class = "form-control"})
            <span class="text-danger" asp-validation-for="BorrowerId"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="BookId" class="col-sm-2 col-form-label text-md-right">Book</label>
        <div class="col-sm-10">
            @Html.DropDownList("BookId", Model.Books, "-select book-", new { @class = "form-control" })
            <span class="text-danger" asp-validation-for="BookId"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfLoan" class="col-sm-2 col-form-label text-md-right">Date of Loan</label>
        <div class="col-sm-10">
            <input asp-for="DateOfLoan" type="date" class="form-control" min="2000-01-02">
            <span class="text-danger" asp-validation-for="DateOfLoan"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DueDate" class="col-sm-2 col-form-label text-md-right">Due Date</label>
        <div class="col-sm-10">
            <input asp-for="DueDate" type="date" class="form-control" min="2000-01-02">
            <span class="text-danger" asp-validation-for="DueDate"></span>
        </div>
    </div>
    <div class="form-group row offset-sm-2">
        <button type="submit" class="btn btn-success ml-2">Save</button>
        <a asp-page="/Index" class="btn btn-light ml-2">Cancel</a>
    </div>
</form>