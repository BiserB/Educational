@model UserDetailsModel
@{
    ViewData["Title"] = "EditUser";
}
<div class="row">
    <div>
        <a asp-area="Admin" asp-controller="Users" asp-action="UsersList">
            <i class="fa fa-arrow-left m-2">All users</i>
        </a>
    </div>
    <div class="ml-auto mr-auto">
        <h1 class="h3 text-center">Edit Details for User: @Model.Username</h1>
    </div>
</div>

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <form asp-area="Admin" asp-controller="Users" asp-action="EditUser" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.FormGroupFor(model => model.FullName)
            @Html.FormGroupFor(model => model.Email)
            <div class="form-check">
                <input asp-for="EmailConfirmed" class="form-check-input" />
                <label asp-for="EmailConfirmed" class="form-check-label"></label>
                <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
            </div>
            <br />
            @Html.FormGroupFor(model => model.PasswordHash)
            @Html.FormGroupFor(model => model.PhoneNumber)
            @*@Html.FormGroupFor(model => model.Role)*@

            @Html.DropDownList("AllRoles", new SelectList(Model.AllRoles), Model.Role, new { @class = "form-control" })
            <br />
            <br />

            <input asp-for="Id" type="hidden" />
            <button type="submit" class="btn btn-danger">Save changes</button>
        </form>
    </div>
</div>