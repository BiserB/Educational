@model TrainerPanelViewModel
@{
    ViewData["Title"] = "Trainer Home";
}

<div class="col-lg-12">
    <h1 class="h2 m-2">Dashboard</h1>
</div>
<hr />

<div class="container">
    <div class="row">

        <div class="col-sm-4">
            <div class="card text-dark bg-light">
                <div class="card-header bg-dark text-center text-light"><h4>Course list</h4></div>
                <div class="card-body ">
                    <div class="list-group">
                        @{
                            foreach (var course in Model.Courses)
                            {
                                <a asp-area="Trainer" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-primary">
                                    @course.Name
                                    <span class="badge badge-primary badge-pill">@course.InstanceCount</span>
                                </a>
                            }
                        }
                    </div>
                </div>
                <div class="card-footer bg-dark border-danger text-right">
                    <a asp-area="Trainer" asp-controller="Courses" asp-action="AddCourse" class="btn btn-primary font-weight-bold">ADD COURSE</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card text-dark bg-light">
                <div class="card-header bg-dark text-center text-light"><h4>List of resources</h4></div>
                <div class="card-body ">
                    @*<h5 class="card-title">Category 1 Tuts</h5>*@
                    <!--Starting list group here -->

                    <div class="list-group">
                        <a href="https://www.jquery-az.com/jquery-tips/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-primary">
                            jQuery Tutorials
                            <span class="badge badge-primary badge-pill">55</span>
                        </a>

                        <a href="https://www.jquery-az.com/jquery-tips/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-primary">
                            jQuery Tutorials
                            <span class="badge badge-primary badge-pill">55</span>
                        </a>

                        <a href="https://www.jquery-az.com/jquery-tips/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-primary">
                            jQuery Tutorials
                            <span class="badge badge-primary badge-pill">55</span>
                        </a>

                        <a href="https://www.jquery-az.com/javascript-tutorials/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-danger">
                            JavaScript Tutorials
                            <span class="badge badge-primary badge-pill">23</span>
                        </a>

                        <a href="https://www.jquery-az.com/bootstrap-tips-tutorials/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-success">
                            Bootstrap 3 Tutorials
                            <span class="badge badge-primary badge-pill">109</span>
                        </a>
                        <a href="https://www.jquery-az.com/html-tutorials/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-info">
                            HTML Tutorials
                            <span class="badge badge-primary badge-pill">10</span>
                        </a>

                        <a href="#" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-secondary disabled">
                            django Tutorials
                            <span class="badge badge-primary badge-pill">0</span>
                        </a>
                    </div>

                    <!--Ends here -->
                </div>

                <div class="card-footer bg-secondary border-danger text-right">
                    <a href="#" class="btn btn-info btn-sm">Tutorials</a> <a href="#" class="btn btn-success btn-sm">Demos</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card text-dark bg-light">
                <div class="card-header bg-dark text-center text-light"><h4>List of resources</h4></div>
                <div class="card-body ">

                    <div class="list-group">
                        <a href="https://www.jquery-az.com/jquery-tips/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-primary">
                            @ResType.Presentation
                            <span class="badge badge-primary badge-pill">55</span>
                        </a>

                        <a href="https://www.jquery-az.com/javascript-tutorials/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-danger">
                            @ResType.Video
                            <span class="badge badge-primary badge-pill">23</span>
                        </a>

                        <a href="https://www.jquery-az.com/bootstrap-tips-tutorials/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-success">
                            @ResType.Task
                            <span class="badge badge-primary badge-pill">109</span>
                        </a>
                        <a href="https://www.jquery-az.com/html-tutorials/" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-info">
                            @ResType.Archive
                            <span class="badge badge-primary badge-pill">10</span>
                        </a>

                        <a href="#" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-secondary disabled">
                            @ResType.Book
                            <span class="badge badge-primary badge-pill">0</span>
                        </a>
                    </div>

                    <!--Ends here -->
                </div>

                <div class="card-footer bg-dark border-danger text-right">
                    <a href="/Trainer/Resources/AddResource" class="btn btn-primary font-weight-bold">NEW RESOURCE</a>
                </div>
            </div>
        </div>
    </div>
</div>