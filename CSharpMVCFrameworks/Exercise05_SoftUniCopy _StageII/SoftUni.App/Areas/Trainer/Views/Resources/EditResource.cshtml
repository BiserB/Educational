@model ResourceBindingModel
@{
    ViewData["Title"] = "EditResource";
}
<div class="row m-2">
    <div>
        <a asp-area="Trainer" asp-controller="Instances" asp-action="EditLecture" asp-route-id="@Model.LectureId">
            <i class="fa fa-arrow-left m-2">Back to the lecture</i>
        </a>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="card text-dark bg-light">
                <div class="card-header bg-dark text-center text-light"><h4>Edit the resource.</h4></div>
                <div class="col-sm-10 ml-auto mr-auto">
                    <form asp-area="Trainer" asp-controller="Resources" asp-action="EditResource" method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.DropDownListFor(m => m.ResourceTypeId, Model.ResourceTypes, "-- select type --", new { @class = "form-control" })
                        <br />
                        @Html.FormGroupFor(model => model.ResourceUrl)
                        @Html.FormGroupFor(model => model.Title)
                        <br />
                        <input asp-for="LectureId" type="hidden" class="form-control" />
                        <input asp-for="ResourceId" type="hidden" class="form-control" />
                        <div class="row">
                            <div class="mr-auto">
                                <a asp-area="Trainer" asp-controller="Resources" asp-action="DeleteResource" asp-route-id="@Model.ResourceId" asp-route-lectureId="@Model.LectureId" class="btn btn-danger font-weight-bold m-2 ml-auto">DELETE RESOURCE</a>
                            </div>
                            <div class="ml-auto">
                                <button type="submit" class="btn btn-warning font-weight-bold m-2 ml-auto">SAVE CHANGES</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>