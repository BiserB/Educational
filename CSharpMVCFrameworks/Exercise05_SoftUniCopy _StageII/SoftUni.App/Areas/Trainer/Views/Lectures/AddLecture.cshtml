@model LectureBindingModel
@{
    ViewData["Title"] = "Add Lecture";
}

<div class="row m-2">
    <div>
        <a asp-area="Trainer" asp-controller="Instances" asp-action="EditInstance" asp-route-id="@ViewData["InstanceId"]">
            <i class="fa fa-arrow-left m-2">Back to the instance</i>
        </a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="card text-dark bg-light">
                <div class="card-header bg-dark text-center text-light"><h4>Create new Lecture.</h4></div>
                <div class="col-sm-10 ml-auto mr-auto">
                    <form asp-area="Trainer" asp-controller="Lectures" asp-action="AddLecture" method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.FormGroupFor(model => model.Title)
                        @Html.FormGroupFor(model => model.Description)
                        @Html.FormGroupFor(model => model.LectureHall)

                        <div class="form-group">
                            <label asp-for="StartTime"></label>
                            <input type="datetime-local" name="StartTime" value="@DateTime.Now"
                                   max="@DateTime.Now.AddYears(2)" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EndTime"></label>
                            <input type="datetime-local" name="EndTime" value="@DateTime.Now"
                                   max="@DateTime.Now.AddYears(2)" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>

                        <br />
                        <input name="InstanceId" type="hidden" class="form-control" value="@ViewData["InstanceId"]" />
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary font-weight-bold m-2 ml-auto">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>