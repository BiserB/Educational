@page
@model BookLibrary.App.Pages.Books.AddModel
@{
    ViewData["Title"] = "Add Book";
}

<h2 class="text-center m-2">@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label text-md-right">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" type="text" class="form-control" placeholder="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AuthorName" class="col-sm-2 col-form-label text-md-right">Author</label>
        <div class="col-sm-10">
            <input asp-for="AuthorName" type="text" class="form-control" placeholder="Author">
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CategoryName" class="col-sm-2 col-form-label text-md-right">Category</label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" type="text" class="form-control" placeholder="Category">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CoverImageUrl" class="col-sm-2 col-form-label text-md-right">Cover Image Url</label>
        <div class="col-sm-10">
            <input asp-for="CoverImageUrl" type="text" class="form-control" placeholder="Cover Image Url">
            <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label text-md-right">Description</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" rows="3" class="form-control" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row offset-sm-2">
        <button type="submit" class="btn btn-success ml-2">Add book</button>
        <a asp-page="/Index" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</form>