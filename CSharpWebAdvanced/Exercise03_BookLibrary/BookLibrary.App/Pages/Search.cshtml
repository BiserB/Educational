@page
@model BookLibrary.App.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}

<h2>Search results for: "@Model.SearchTerm"</h2>

<ul>
    @{
        foreach (var result in Model.Results)
        {
            string targetPage = result.Type == "book" ? "/Books/Details" : "/Authors/Details";

            <li><a asp-page="@targetPage" asp-route-id="@result.Id">@Html.Raw(result.Name)</a> (@result.Type)</li>
        }
    }
</ul>